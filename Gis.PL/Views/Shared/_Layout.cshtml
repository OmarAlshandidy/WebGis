<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gis.PL</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/lib/leaflet/leaflet.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body>
   
    <style>
        .footer {
            background-color: #343a40; 
            color: #ffffff;
            font-size: 14px;
            border-top: 2px solid #198754; 
        }

            .footer span {
                display: inline-block;
                padding: 5px 10px;
            }

    </style>
    <header>
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" asp-controller="Home" asp-action="Index">Gis.PL</a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <!-- Navbar Right Menu-->
            <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
                <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user fa-fw"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#!">Settings</a></li>
                            <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Security</div>
                        <a class="nav-link" asp-controller="Role" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Roles
                        </a>
                        <a class="nav-link" asp-controller="User" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Users
                        </a>

                        <div class="sb-sidenav-menu-heading">Website</div>
                        <a class="nav-link" asp-controller="Mosques" asp-action="Index">
                            <div class="sb-nav-link-icon"></div>
                            🕌 Mosques
                        </a>
                        <a class="nav-link" asp-controller="Restaurant" asp-action="Index">
                            <div class="sb-nav-link-icon"></div>
                            🍽️ Restaurants

                        </a>
                        <a class="nav-link" asp-controller="Pharmacy" asp-action="Index">
                            <div class="sb-nav-link-icon"></div>
                            💊 Pharmacies
                        </a>
                        <a class="nav-link" asp-controller="Market" asp-action="Index">
                            <div class="sb-nav-link-icon"></div>
                            🛒 SuperMarkets

                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <div class="container">
                <main role="main" class="pb-3">
					<script src="~/lib/jquery/dist/jquery.min.js"></script>
                  
					<script src="~/jquery-ajaxy/scripts/jquery.ajaxy.min.js"></script>
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="footer bg-dark text-white py-3 mt-auto">
        <div class="container text-start">
            <span>&copy; 2025 - Gis.OmarAlshandidy | All rights reserved</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("ValidionSection", required: false)

</body>
</html>
