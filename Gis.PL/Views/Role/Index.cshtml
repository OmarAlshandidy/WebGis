@model IEnumerable<RoleToReturnDto>
@{
    ViewData["Title"] = "Index";
}

<form asp-action="Index" method="get" class="mt-4 row justify-content-center align-items-center">
    <div class="row col-8 offest-1">
        <div class="col-8">
            <input placeholder="Search By Name " id="SearchInput" name="SearchInput" class="form-control" />
        </div>

        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>

    </div>
</form>

<br />

<h1>All Role </h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary"> Create Role </a>

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="mt-4 alert  alert-info">
        <p>@TempData["Message"]</p>
    </div>
}

<br/>
<br />
@if(Model.Count() > 0 )
{
    <table class="table tabletable-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th> Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.Name</td>
                 
                  
                    

                    <partial name="ButtonPartialView" model="@item.Id"/>

                </tr>
            }
        </tbody>
    </table>

}else{
    <div class="m-4 alert alert-info">
        <h4> 
            There Are No Role :(
        </h4>
    </div>
}


